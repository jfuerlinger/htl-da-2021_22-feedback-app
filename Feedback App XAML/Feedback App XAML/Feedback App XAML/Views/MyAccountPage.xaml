<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Feedback_App_XAML.Views.MyAccountPage">
    <ContentPage.Content>
        <StackLayout Margin="20,10,20,10">

            <StackLayout Margin="20,40">
                <Label Text="Meine Daten" FontAttributes="Bold" Font="30" VerticalOptions="Center" HorizontalOptions="Center" Margin="20,40" TextColor="Black"/>
                <Label Text="Vorname:" Font="20" VerticalOptions="Center" TextColor="Black"/>
                <Label Text="Nachname:" Font="20" VerticalOptions="Center" TextColor="Black"/>
                <Label Text="Username:" Font="20" VerticalOptions="Center" TextColor="Black"/>
                <Label Text="Email:" Font="20" VerticalOptions="Center" TextColor="Black"/>
                <Label Text="Schule:" Font="20" VerticalOptions="Center" TextColor="Black"/>
            </StackLayout>

            <StackLayout Padding="0" Margin="120,30">
                <Button Text="Bearbeiten" TextColor="White" BackgroundColor="Black" x:Name="ButtonSave" Clicked="ButtonEdit_Clicked" CornerRadius="50"/>
            </StackLayout>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>